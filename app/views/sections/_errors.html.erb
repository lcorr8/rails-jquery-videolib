<% if @section.errors.any? %>
  <div id="error_explanation" class="errors">
    <p>
      <%= pluralize(@section.errors.count, "error") %>
      prohibited this video from being saved:
    </p>
    <ul>
      <% @section.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>  
    </ul>
  </div>
<% end %>